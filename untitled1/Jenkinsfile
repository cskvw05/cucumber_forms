pipeline {
    agent {
        docker {
           image 'maven:3.8.4-openjdk-11'
            args '-v /c/ProgramData/Jenkins/.jenkins/workspace/cucumber@2:/workspace -w /workspace'
        }
    }
    environment {
        JAVA_HOME = "/usr/lib/jvm/java-11-openjdk"
        MAVEN_OPTS = "-Xmx1024m"
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        timeout(time: 60, unit: 'MINUTES')
    }
    stages {
        stage('Checkout Code') {
            steps {
                checkout scm // Pull source code from SCM
            }
        }
        stage('Build and Test') {
            steps {
                // Run tests and generate reports
                script {
                    sh 'mvn test -D"cucumber.filter.tags=@test1"'
                }
            }
            post {
                always {
                    // Archive JUnit XML test results
                    junit 'target/surefire-reports/*.xml'

                    // Archive HTML reports (if generated by Cucumber)
                    archiveArtifacts artifacts: 'target/cucumber-reports/*.html', allowEmptyArchive: true
                }
                failure {
                    echo 'Tests failed. Please check the reports.'
                }
            }
        }
        stage('Archive Cucumber JSON Report') {
            steps {
                // Archive the Cucumber JSON report for analysis
                archiveArtifacts artifacts: 'target/cucumber-reports/*.json', allowEmptyArchive: true
            }
        }
    }
    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check the logs for details.'
        }
    }
}
